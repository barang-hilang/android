<android.support.v7.widget.CardView android:id="@+id/primaryContentCardViewBarang"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imgFotobrg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_icon_24dp"/>

    <TextView
        android:id="@+id/tvNamabrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_toRightOf="@+id/imgFotoBarang"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="77dp"
        android:text="demo"
        android:typeface="sans"
        />

    <TextView
        android:id="@+id/tvDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamaBarang"
        android:layout_toRightOf="@+id/imgFotoBarang"
        android:layout_gravity="left"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="28dp"
        android:text="demo"
        android:typeface="sans"
        />



</android.support.v7.widget.CardView>