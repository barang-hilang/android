<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewPagerBarang"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="100dp">



    <android.support.v7.widget.CardView
        android:id="@+id/primaryContentCardViewBarang"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFotobrg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_icon_24dp"/>

        <TextView
            android:id="@+id/tvNamabrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toRightOf="@+id/imgFotoBarang"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="77dp"
            android:text="demo"
            android:typeface="sans"
            />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaBarang"
            android:layout_toRightOf="@+id/imgFotoBarang"
            android:layout_gravity="left"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="28dp"
            android:text="demo"
            android:typeface="sans"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/secondaryContentFrameLayoutBarang"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#959595"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btnBagikan"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:background="@drawable/timelinebutton_selector"
            android:padding="3dp"
            android:text="Bagikan"
            android:textColor="@color/white_greyish"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTemukan"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Ditemukan" />




    </LinearLayout>
    <!--</LinearLayout>-->




</android.support.v4.view.ViewPager>